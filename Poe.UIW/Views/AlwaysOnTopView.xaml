<Window x:Class="Poe.UIW.Views.AlwaysOnTopView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Poe.UIW.Views"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        WindowStyle="None"
        Width="400"
        Height="450"
        Top="0"
        Left="0"
        mc:Ignorable="d"
        Title="AlwaysOnTopView"
        DataContext="{Binding Source={StaticResource Locator}, Path=AlwaysOnTopView}">
    
    <StackPanel Orientation="Horizontal">
        <StackPanel x:Name="ResizablePanel">
            <StackPanel
                MinWidth="400"
                MaxWidth="400"
                x:Name="stk_MainPnl">

                <StackPanel.Resources>

                </StackPanel.Resources>
            </StackPanel>
        </StackPanel>


    </StackPanel>
</Window>