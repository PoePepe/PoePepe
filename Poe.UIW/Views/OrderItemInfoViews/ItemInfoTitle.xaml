<UserControl x:Class="Poe.UIW.Views.OrderItemInfoViews.ItemInfoTitle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Poe.UIW.Views.OrderItemInfoViews"
             mc:Ignorable="d"
             d:DesignHeight="50" d:DesignWidth="300">
    <Grid SnapsToDevicePixels="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        
        <Image Grid.Column="0" x:Name="LeftImage"/>
                
        <Grid Grid.Column="1">
            <Grid.Background>
                <ImageBrush x:Name="MiddleImageBrush"/>
            </Grid.Background>
        </Grid>
                
        <Image Grid.Column="2" x:Name="RightImage"/>
    </Grid>
</UserControl>
